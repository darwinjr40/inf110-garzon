unit Unit2POO;

interface

uses SysUtils;

type
  NumeroNatural=class
  private
    { Private declarations }
    Valor:word; //var global
  public
    { Public declarations }
    Constructor create;
    Procedure CambiarVariable(V:word);
end;

implementation
  Constructor NumeroNatural.create;
  begin
    Valor:=0;
  end;
  procedure NumeroNatural.CambiarVariable(V:word);
  begin
    Valor:=V;
  end;

end.
